<div class="container">
 <div class="row">
  <div class="col-lg-12">
   <h1 class="frame " style="width:100%">
 	<div class="col-lg-4">Polls Display</div>
 	 <% if user_signed_in? %>
 	  <div class = "col-lg-4">
 	 	<%= link_to 'New Text Poll', new_textpoll_path, :class => "btn-sign new" %>
 	  </div>
 	 <div class = "col-lg-4">
 	 <%= link_to 'New Picture Poll', new_picpoll_path , :class => "btn-sign new" %>
 	 </div>
   </h1>
 <div class="row"> 	
 	</div>
 	<div class="col-lg-6 frame">
 	 <h3>MY polls</h3>
	<div >
 	 <%= @polls=current_user.textpolls %>
 	</div>
 	<% @polls.each do |poll| %><p>
 	 <h1><%= poll.title %></h1>
 	</p>

 	 <hr>
 	<% end %>
 	<%= @pol=current_user.picpolls %>
 	<% @pol.each do |pil| %><p>
	<h1><%= pil.title %><br></h1>
	
	<p>
<hr>
<% end %>
 	</div>

 <div class="col-lg-6 frame">

<h3>All Polls</h3>

		<% @textpolls.each do |text| %><p>
		<%= text.title %>
		<%= link_to 'Vote', text, :class => "btn-vote"%>
		<% end %>
		<% @picpolls.each do |pic| %><p>
		<%= pic.title %><p>
		<%= link_to 'Vote', pic %>
 	  <% end %> </div>         
</div>
<% else %>
 <div class="frame">
   <h3>All Polls</h3>
		<% @textpolls.each do |text| %><p>
		<%= text.title %>
		<%= link_to 'Vote', text, :class => "btn-sign"%>
		<% end %>
		<% @picpolls.each do |pic| %><p>
		<%= pic.title %><p>
		<%= link_to 'Vote', pic %>
 	  <% end %> </div>         
 	 </div>

<% end %>
</div>
 </div>
</div>


