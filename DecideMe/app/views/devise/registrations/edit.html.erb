 <div class="row">
  <div class="col-lg-8 col-lg-offset-2">
   <div class="frame">
        <h1>Edit Profile </h1>
    <div><hr  class="form-bar">
 <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => "form-sign",html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
      
    <%= f.email_field :email, autofocus: true, :class => "form-styling", :placeholder => "Email Address" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

   <label><em>
      (enter current pssword to confirm changes)
    </em></label>
    
     <%= f.password_field :current_password, autocomplete: "off",:class => "form-styling", :placeholder => "Current Password" %> 


  <label><em>
    (leave blank if you don't want to change it)
  </em></label>

    <%= f.password_field :password, autocomplete: "off", :class => "form-styling", :placeholder => "New Password" %>
   
    <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-styling", :placeholder => "Confirm New Password" %> 

      <%= f.submit "Update", :class => "btn-sign" %>
      <% end %>
    
    <div  class="forgot">
 <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, :class => "btn-cancel", method: :delete %>
 
