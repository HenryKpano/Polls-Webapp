<div id="tf-contact" class="text-center">
<div class="container">
     <div class="row">
      <div class"col-md-6 col-md-offset-2">
        <div class="section-title center">
          <h1><strong>Picture Polls</strong></h1>
                        <div class="line">
                            <hr>
                        </div>
                        <div class="clearfix"></div>
               
                    </div>

<%= form_for @poll, html: { multipart: true } do |f| %>

	<p><%= f.label "Topic" %>: <%= f.text_field :topic, class: "form-control" %></p>
	 
	<p><%= f.label "First image" %>: <%= f.file_field :image %></p>

	<p><%= f.label "Second image" %>: <%= f.file_field :image_one %></p>

	<%= f.label "Description" %>: <%= f.text_field :mesage, class: "form-control" %></p>

	<p><%= f.submit "Create poll" %></p>

<% end %>
<%= link_to 'Back', polls_path %>

</div>
</div>
</div>
</div>