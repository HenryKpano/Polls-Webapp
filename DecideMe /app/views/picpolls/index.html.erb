 <div class="container">
 	<div class="row">
 		<div class="col-lg-12">
<h1 class="frame " style="width:100%">
			<div class="col-lg-8" style="margin-top:15px">Picture Poll</div>
			<div class = "col-lg-4">
			<%= link_to 'New Picture Poll', new_picpoll_path, :class=> "btn-sign new" %>	
			</div>
		</h1>

 <div class="col-lg-12 frame" style="width:100%">
 	<% @picpolls.each do |pic| %>
	<h3><%= pic.title %></h3>
<div class="col-lg-4 col-lg-offset-2">
    <a href="#" class="thumbnail frame">
     <%= image_tag pic.image.url(:medium)%>
    </a>
  </div>
  <div class="col-lg-4">
<a href="#" class="thumbnail frame">
	<%= image_tag pic.image_one.url(:medium) %>
    </a>
  </div>

<div class="col-lg-4 col-lg-offset-2">
<div class="progress">
  <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
    60%
  </div>
</div></div>

<div class="col-lg-4">
<div class="progress">
  <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 40%;">
    60%
  </div>
</div></div><div class="row"></div><hr>
<% end %>
</div>  <hr>                    
 		</div>
 	</div>
 </div>

